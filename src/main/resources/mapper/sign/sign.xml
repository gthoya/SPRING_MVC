<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sign">
    <insert id="insertUser" parameterType="com.gthoya.application.sign.model.User">
        INSERT INTO test.user(user_id, password)
        VALUES (#{userId}, #{password})
    </insert>

    <select id="selectUser" resultType="com.gthoya.application.sign.model.User">
        SELECT  id, user_id AS userId
        FROM    test.user
        WHERE   user_id = #{userId}
        <if test='password != null and password != ""'>
        AND     password = #{password}
        AND     withdrawal_date = '0000-00-00 00:00:00'
        </if>
    </select>
</mapper>